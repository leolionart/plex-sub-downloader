# Environment variables template
# Copy file này thành .env và điền values

# ============================================
# PLEX CONFIGURATION
# ============================================

# Plex server URL
# - Nếu Plex chạy trên cùng Docker network: http://plex:32400
# - Nếu Plex chạy trên host machine: http://host.docker.internal:32400
# - Nếu Plex chạy trên máy khác: http://192.168.1.x:32400
PLEX_URL=http://localhost:32400

# Plex authentication token
# Lấy token: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
PLEX_TOKEN=your-plex-token-here

# ============================================
# SUBSOURCE CONFIGURATION
# ============================================

# Subsource API key
# Đăng ký tại: https://subsource.net/api-docs
SUBSOURCE_API_KEY=your-subsource-api-key-here

# Subsource API base URL (thường không cần đổi)
SUBSOURCE_BASE_URL=https://api.subsource.net/api

# ============================================
# SUBTITLE PREFERENCES
# ============================================

# Default subtitle language (ISO 639-1 code)
# vi = Vietnamese, en = English, etc.
DEFAULT_LANGUAGE=vi

# ============================================
# WEBHOOK SECURITY (OPTIONAL)
# ============================================

# Secret key để verify webhooks
# Nếu set, Plex/Tautulli phải gửi header: X-Webhook-Secret: <value>
# Bỏ trống nếu không muốn authentication
WEBHOOK_SECRET=

# ============================================
# APPLICATION SETTINGS
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API retry configuration
MAX_RETRIES=3
RETRY_DELAY=2

# ============================================
# DOCKER NETWORK (OPTIONAL)
# ============================================

# Nếu Plex chạy trên cùng Docker network
# PLEX_URL=http://plex:32400

# Nếu Plex chạy ngoài Docker (host machine)
# PLEX_URL=http://host.docker.internal:32400

# ============================================
# TELEGRAM NOTIFICATIONS (OPTIONAL)
# ============================================

# Telegram bot token (from @BotFather)
# Guide: https://core.telegram.org/bots#6-botfather
TELEGRAM_BOT_TOKEN=

# Telegram chat ID (your user ID or group ID)
# Get it: Send message to bot, then visit:
# https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=

# ============================================
# CACHE SETTINGS (OPTIONAL)
# ============================================

# Enable subtitle search caching
CACHE_ENABLED=true

# Redis connection URL (optional)
# If not set, uses in-memory cache
# Examples:
# - redis://localhost:6379/0
# - redis://redis:6379/0 (Docker network)
# - redis://:password@localhost:6379/0
REDIS_URL=

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL_SECONDS=3600

# ============================================
# OPENAI TRANSLATION (OPTIONAL)
# ============================================

# OpenAI API key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI API base URL
# Default: https://api.openai.com/v1
# Custom endpoints (OpenRouter, LM Studio, etc.) also supported
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI model for translation
# Recommended: gpt-4o-mini (cost-effective)
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo, gpt-4o-mini
OPENAI_MODEL=gpt-4o-mini

# Enable auto-translation when Vietnamese subtitle not found
# WARNING: This will consume OpenAI API credits!
TRANSLATION_ENABLED=false

# Require manual approval before translating
# Recommended: true (to avoid unexpected costs)
# Set to false for fully automatic translation
TRANSLATION_REQUIRES_APPROVAL=true
